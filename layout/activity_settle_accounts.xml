<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settle_accounts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#4876FF">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/back_cart"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/zuobanjiantou" />
                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="13dp"
                        android:id="@+id/chooseAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="浙江农林大学"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"/>

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/youbanjiantou"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/serviceTime"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="送达时间"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:textColor="#000000"/>
                            <TextView
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="right"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:text="尽快送达"
                                android:textColor="#4876FF"
                                android:textStyle="bold"
                                android:textSize="15dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEED1"
                            android:layout_gravity="center_horizontal"
                            />

                        <LinearLayout
                            android:id="@+id/paymentMethod"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="支付方式"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:textColor="#000000"/>
                            <TextView
                                android:layout_marginRight="20dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="right"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:text="支付宝免密支付"
                                android:textColor="#4876FF"
                                android:textStyle="bold"
                                android:textSize="15dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff">

                    <ListView
                        android:id="@+id/order_fInfo"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scrollbars="none"
                        android:divider="@null">

                    </ListView>

                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="小计  "
                            android:textColor="#000000"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/order_totalPrice"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥97.8"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="17dp"/>
                    </LinearLayout>


                </LinearLayout>

                <CheckBox
                    android:id="@+id/is_jinBi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="使用金币（100金币=1元）"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="#3D3D3D">

            <TextView
                android:id="@+id/order_totalPrice_2"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:text="¥97.8"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"/>
            <TextView
                android:id="@+id/pay"
                android:layout_gravity="right"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:text="免密支付"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:background="#EEAD0E"/>
        </LinearLayout>
    </RelativeLayout>
    </FrameLayout>





</LinearLayout>
